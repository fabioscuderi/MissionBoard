.container-fluid	
	.row.header
		.col-md-6.roles
			- @roles.each do |role|
				.col-md-2
					%h4= role.name
					%div= select_tag role.name, options_from_collection_for_select(@users, "id", "name")
		.col-md-2.mood
			%h4 My Mood
			= select_tag @moods.name, options_from_collection_for_select(@moods, "id", "name")
		.col-md-3.user
			%h4= @user.name
			- if @user.photo.present?
				%div= image_tag @user.photo, style: 'width: 50px; height: 50px'
			- else
				"No photo"
		.col-md-1.exit
			%h4= link_to "Exit", exit_path
	.row.main
		.col-md-4.sidebar1
			%h3.heading Mood Board
			.row
