		.col-md-8.body1
			%h3.heading To Do
			%table.table.table-striped
				.table-responsive
					%thead
						%tr
							%th Title
							%th Desctiption
							%th Status
							%th Due Date
							%th Asignees
					%tbody
						- @todos.each do |todo|
							%tr
								%td= todo.title
								%td= todo.description
								%td= todo.status
								%td= todo.due_date
								%td= todo.image
			%div.new= link_to "New To Do", new_todo_path
			%div.new= link_to "Edit To Do", todos_path
